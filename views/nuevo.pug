extends layouts/main.pug
block contenido
    .col-md-4.mx-auto
        .card
            .card-body
                form(action='/listar/', method='POST')
                    .form-group
                        input.form-control(type='text', name='title', placeholder='Title' autofocus='')
                    .form-group
                        input.form-control(type='url', name='url', placeholder='URL')
                    .form-group
                        textarea.form-control(name='description', rows='2', placeholder='description')
                    .form-group
                        button.btn.btn-success.btn-block Save