extends partials/messages.pug
append message
block contenido
    .container
        .row
            - var i = 0;
            each val in datos
                .col-md-3.mt-3.mb-3
                    .card.text-center
                        .card-body
                        a(href=datos[i].url, target='_blank')
                            h3.card-title.text-uppercase #{datos[i].title}
                        p.m-2 #{datos[i].description}
                        p.text-muted #{datos[i].created_at}
                        a.btn.btn-danger(href='/listar/delete/'+datos[i].id)
                            //- enviame a ala ruta links/delete con su respectivo id
                            | Delete Link
                        a.btn.btn-secondary(href='/listar/edit/'+datos[i].id)
                            | Edit
                - i++           
            else
                #cont.container.pt-4
                    .row
                        .col-md-4.mx-auto
                            .card.card-body.text-center
                                p No hay ordenes creadas
                                a.btn.btn-success(href='nueva-orden') Crea una!
